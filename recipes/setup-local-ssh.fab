<script>
export default {
  server: {
  	host: 'server-host',
  	port: 22,
  	privateKey: '/usr/'
  }
}
</script>

<fabula>
mkdir -p ~/.ssh/
chmod 755 ~/.ssh
# sshConfig will contain a /tmp/ file path
local append <%= sshConfig %>
chmod 640 sshConfig
</fabula>

<fabula id="sshConfig">
Host <%= server.host %>
  Hostname <%= server.hostname %>
  Port <%= server.port %>
  IdentityFile <%= server.privateKey %>
  StrictHostKeyChecking no
</fabula>
